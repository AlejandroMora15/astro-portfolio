---
import EducationIcon from '../icons/EducationIcon.astro';

const data = [
  {
    school: 'IBM',
    study: 'Certificación IBM Full Stack Software Developer',
    location: 'Remoto',
    period: '2023 - 2024',
  },
  {
    school: 'Universidad Católica de Pereira',
    study: 'Grado en Ingeniero en Sistemas y Telecomunicaciones',
    location: 'Colombia',
    period: '2018 - 2023',
  },
];
---

<section class='w-full pt-16' id='educacion'>
  <div class='flex gap-3 justify-center items-center mb-12'>
    <EducationIcon className='h-9 w-9 text-electric-violet-800' />
    <h2
      class='text-center text-2xl lg:text-3xl font-semibold text-electric-violet-800'
    >
      Educación
    </h2>
  </div>
  <ul class='flex flex-col gap-8 items-center'>
    {
      data.map(({ school, study, period, location }) => (
        <li class='w-full sm:w-[600px] backdrop-blur-sm bg-white/30 px-8 py-4 rounded-lg shadow-lg '>
          <header class='flex justify-between'>
            <div>
              <h3 class='font-semibold text-lg text-electric-violet-700 '>
                {school}
              </h3>
              <p class='text-zinc-800 text-sm'>{study}</p>
            </div>
            <div class='text-right text-sm'>
              <p class='text-zinc-700'>{period}</p>
              <p class='text-zinc-600'>{location}</p>
            </div>
          </header>
        </li>
      ))
    }
  </ul>
</section>
