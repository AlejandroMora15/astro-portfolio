---
import { Image } from 'astro:assets';
import photo from '../assets/photo.jpeg';
import DownloadCVButton from './DownloadCVButton.astro';
import SidebarButton from './SidebarButton.astro';
import ProfileIcon from '../assets/Profile-icon.astro';
import SchoolIcon from '../assets/SchoolIcon.astro';
import WorkIcon from '../assets/WorkIcon.astro';
import BulbIcon from '../assets/BulbIcon.astro';
import SocialButton from './SocialButton.astro';
import GithubIcon from '../assets/GithubIcon.astro';
import InstagramIcon from '../assets/InstagramIcon.astro';
import LinkedInIcon from '../assets/LinkedInIcon.astro';
---

<aside
  class='flex flex-col justify-between bg-blue-900 sm:w-80 w-16 fixed min-h-full'
>
  <section class='flex flex-col sm:gap-8 gap-4 items-center mt-8'>
    <div class='flex flex-col gap-2 items-center'>
      <Image
        class='rounded-full sm:h-52 sm:w-52 object-cover h-12 w-12'
        src={photo}
        alt='photo'
      />
      <DownloadCVButton />
    </div>
    <SidebarButton href='#home' label='Inicio'>
      <ProfileIcon />
    </SidebarButton>
    <SidebarButton href='#school' label='Experiencia acadÃ©mica'>
      <SchoolIcon />
    </SidebarButton>
    <SidebarButton href='#work' label='Experiencia laboral'>
      <WorkIcon />
    </SidebarButton>
    <SidebarButton href='#projects' label='Proyectos'>
      <BulbIcon />
    </SidebarButton>
  </section>
  <section class='flex flex-wrap justify-center items-center gap-4 mb-4'>
    <SocialButton href='https://github.com/AlejandroMora15'>
      <GithubIcon />
    </SocialButton>
    <SocialButton
      href='https://www.instagram.com/invites/contact/?i=16uuzotg361q0&utm_content=274yzwp'
    >
      <InstagramIcon />
    </SocialButton>
    <SocialButton
      href='https://www.linkedin.com/in/alejandro-morales-rios-95b953202'
    >
      <LinkedInIcon />
    </SocialButton>
  </section>
</aside>
